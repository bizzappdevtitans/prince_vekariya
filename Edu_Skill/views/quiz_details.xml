<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_quiz_tree" model="ir.ui.view">
        <field name="name">quiz.detail.tree</field>
        <field name="model">quiz.detail</field>
        <field name="arch" type="xml">
            <tree>
                <field name="question" />
                <field name="right_answer" />
            </tree>
        </field>
    </record>
    <data>
       <record id="seq_order_detail" model="ir.sequence">
           <field name="name">Course Order</field>
           <field name="code">order.detail</field>
           <field name="prefix">CO</field>
           <field name="padding">5</field>
           <field name="company_id" eval="False" />
       </record>
    </data>
    <record id="view_quiz_form" model="ir.ui.view">
        <field name="name">quiz.detail.form</field>
        <field name="model">quiz.detail</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <field name="reference_no" />
                    </h1>
                    <group>
                        <group>
                            <field name="question" />
                            <field name="option_1" />
                            <field name="option_3" />
                        </group>
                        <group>
                            <field name="teacher_id" />
                            <field name="option_2" />
                            <field name="option_3" />
                            <field name="right_answer" />
                            <field name="verified" invisible="1" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_quiz_detail" model="ir.actions.act_window">
        <field name="name">Quiz</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">quiz.detail</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">No Quiz Found.. </p>
        </field>
    </record>

    <record id="view_quiz_search" model="ir.ui.view">
        <field name="name">quiz.detail.search</field>
        <field name="model">quiz.detail</field>
        <field name="arch" type="xml">
            <search>
                <field name="question" />
                <field name="course_id" />
                <group expand="0" string="Group By">
                    <filter
                        string="Gender"
                        name="group_by_video"
                        context="{'group_by':'course_id'}"
                    />
                </group>
            </search>
        </field>
    </record>

</odoo>
