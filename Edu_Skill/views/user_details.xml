<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_user_tree" model="ir.ui.view">
        <field name="name">user.detail.tree</field>
        <field name="model">user.detail</field>
        <field name="arch" type="xml">
            <tree>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="age"/>
                <field name="gender"/>
            </tree>
        </field>
    </record>

    <record id="view_user_form" model="ir.ui.view">
        <field name="name">user.detail.form</field>
        <field name="model">user.detail</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <label for="first_name"/>
                            <h1>
                                <field name="first_name" placeholder="Enter First Name"/>
                            </h1>
                            <label for="last_name"/>
                            <h1>
                                <field name="last_name"/>
                            </h1>
                        </group>
                        <group>
                            <field name="image" widget="image" class="oe_avatar"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="age"/>
                            <field name="gender"/>
                            <field name="email" widget="phone"/>
                            <field name="qualification"/>
                            <field name="graduation"/>
                        </group>
                        <group>
                            <field name="last_name"/>
                            <field name="birth_date"/>
                            <field name="phone_number" widget="phone" />
                            <field name="address"/>
                            <field name="password"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <group>
                        <div style="text-align:center">
                        </div>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_user_detail" model="ir.actions.act_window">
        <field name="name">User</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">user.detail</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">No User Found.. </p>
        </field>
    </record>

    <record id="view_user_search" model="ir.ui.view">
        <field name="name">user.detail.search</field>
        <field name="model">user.detail</field>
        <field name="arch" type="xml">
            <search>
                <field name="first_name" string="First Name" filter_domain="['|',('first_name','ilike',self),('last_name','ilike',self)]" />
                <field name="age"/>
                <field name="gender"/>
                <filter name="filter_male" string="Male" domain="[('gender', '=','Male')]"/>
                <separator/>
                <filter name="filter_female" string="Female" domain="[('gender','=','Female')]"/>
                <separator/>
                <filter name="filter_active" string="Archived" domain="[('active','=',False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Gender" name="group_by_gender" context="{'group_by':'gender'}"/>
                </group>
                <searchpanel>
                    <field name="gender" icon="fa-users" select="multi" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

</odoo>
