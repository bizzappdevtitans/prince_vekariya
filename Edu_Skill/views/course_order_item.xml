<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_order_tree" model="ir.ui.view">
        <field name="name">course.item.order.detail.tree</field>
        <field name="model">course.item.order.detail</field>
        <field name="arch" type="xml">
            <tree>
                <field name="order_id"/>
                <field name="user_first_name"/>
                <field name="user_last_name"/>
                <field name="course_name"/>
                <field name="price"/>
            </tree>
        </field>
    </record>
    <data>
       <record id="seq_order_item_detail" model="ir.sequence">
           <field name="name">Course Order Item</field>
           <field name="code">course.item.order.detail</field>
           <field name="prefix">COI</field>
           <field name="padding">5</field>
           <field name="company_id" eval="False"/>
       </record>
    </data>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">course.item.order.detail.form</field>
        <field name="model">course.item.order.detail</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <field name="reference_no"/>
                    </h1>
                    <group>
                        <field name="order_id"/>
                        <field name="user_first_name"/>
                        <field name="user_last_name"/>
                        <field name="course_name"/>
                        <field name="price"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_order_item_detail" model="ir.actions.act_window">
        <field name="name">Order Item</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">course.item.order.detail</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">No Order Item Found.. </p>
        </field>
    </record>

    <record id="view_order_search" model="ir.ui.view">
        <field name="name">course.item.order.detail.search</field>
        <field name="model">course.item.order.detail</field>
        <field name="arch" type="xml">
            <search>
                <filter name="course_name" string="course_name"/>
                <group expand="0" string="Group By">
                    <filter string="course_name" name="group_by_course_name" context="{'group_by':'course_name'}"/>
                </group>
                <searchpanel>
                    <field name="course_name" icon="fa-book" select="multi" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

</odoo>
