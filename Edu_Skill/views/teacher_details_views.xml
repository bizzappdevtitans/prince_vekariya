<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_teacher_form" model="ir.ui.view">
        <field name="name">teacher.detail.form</field>
        <field name="model">teacher.detail</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="first_name"/>
                            <field name="age"/>
                            <field name="gender"/>

                        </group>
                        <group>
                            <field name="name"/>
                            <field name="address"/>
                            <field name="birth_date"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_teacher_detail" model="ir.actions.act_window">
        <field name="name">Teacher</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">teacher.detail</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">No teacher Found.. </p>
        </field>
    </record>


</odoo>
