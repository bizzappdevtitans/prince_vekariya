<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_teacher_tree" model="ir.ui.view">
        <field name="name">teacher.detail.tree</field>
        <field name="model">teacher.detail</field>
        <field name="arch" type="xml">
            <tree>
                <field name="first_name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="name"/>
                <field name="address"/>
            </tree>
        </field>
    </record>

    <record id="view_teacher_form" model="ir.ui.view">
        <field name="name">teacher.detail.form</field>
        <field name="model">teacher.detail</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <!-- Create a smart buttton -->
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_course" type="object" class="oe_stat_button" icon="fa-book">
                            <div class="o_stat_info">
                                <field name="course_count" class="oe_stat_value" />
                                <span class="o_stat_text">Course</span>
                            </div>
                        </button>
                    </div>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <group>
                        <group>
                            <field name="first_name"/>
                            <field name="age"/>
                            <field name="gender"/>

                        </group>
                        <group>
                            <field name="name"/>
                            <field name="address"/>
                            <field name="birth_date"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    <group>

                    <!-- create Button with Action Type -->
                        <button name="%(school_app.action_teacher_detail)d" string="Cencle" confirm="Are You Sure To open ?" type="action" class="oe_highlight"/>

                    </group>
                        <!-- create  a button with object Type -->
                    <button name="action_teacher_detail" string="Object Button" class="oe_highlight" type="object"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids" />
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="action_teacher_detail" model="ir.actions.act_window">
        <field name="name">Teacher</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">teacher.detail</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">No teacher Found.. </p>
        </field>
    </record>
    <record id="view_teacher_search" model="ir.ui.view">
        <field name="name">teacher.detail.search</field>
        <field name="model">teacher.detail</field>
        <field name="arch" type="xml">
            <search>
                <field name="first_name" string="First Name" filter_domain="['|',('first_name','ilike',self),('name','ilike',self)]" />
                <field name="age"/>
                <field name="name"/>
                <field name="gender"/>
                <filter name="filter_male" string="Male" domain="[('gender', '=','Male')]"/>
                <separator/>
                <filter name="filter_female" string="Female" domain="[('gender','=','Female')]"/>
                <separator/>
                <filter name="filter_active" string="Archived" domain="[('active','=',False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Gender" name="group_by_gender" context="{'group_by':'gender'}"/>
                </group>
                <searchpanel>
                    <field name="gender" icon="fa-users" select="multi" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

</odoo>
