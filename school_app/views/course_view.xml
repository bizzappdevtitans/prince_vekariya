<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Creating A tree View -->
    <record id="view_course_tree" model="ir.ui.view">
        <field name="name">course.detail.tree</field>
        <field name="model">course.detail</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'done'" decoration-info="state ==
                'draft'" decoration-danger = "state == 'cancle'"
                decoration-warning="state == 'in_process'">
                <field name="teacher_id" />
                <field name="course_name"/>
                <field name="price"/>
                <field name="activity_ids" widget="list_activity" optional="show"/>
                <field name="state" decoration-success="state == 'done'"
                    decoration-info="state == 'draft'"
                    decoration-danger = "state == 'cancle'"
                    decoration-warning="state == 'in_process'" widget="badge"/>
            </tree>
        </field>
    </record>
    <record id="action_course_detail" model="ir.actions.act_window">
        <field name="name">Course</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">course.detail</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">No Course Found
                ...</p>
        </field>
    </record>
    <!-- Creating A Form View -->
    <record id="course_view_form" model="ir.ui.view">
        <field name="name">course.detail.form</field>
        <field name="model">course.detail</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <group>
                        <group>
                            <field name="teacher_id"/>
                            <field name="course_upload_date"/>
                            <field name="level"/>
                            <field name="price"/>
                        </group>
                        <group>
                            <field name="teacher_last_name" />
                            <field name="course_name"/>
                            <field name="language"/>
                            <field name="state"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description"
                                placeholder="Enter Your Description" />
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids" />
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Creating A search View -->
    <record id="view_course_search" model="ir.ui.view">
        <field name="name">course.detail.search</field>
        <field name="model">course.detail</field>
        <field name="arch" type="xml">
            <search>
                <field name="course_name"  />
                <field name="teacher_id"/>
            </search>
        </field>
    </record>
</odoo>
