<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_course_tree" model="ir.ui.view">
        <field name="name">course.detail.tree</field>
        <field name="model">course.detail</field>
        <field name="arch" type="xml">
            <tree decoration-success="status == 'done'" decoration-info="status == 'draft'" decoration-danger = "status == 'cancle'" decoration-warning="status == 'in_process'">
                <field name="teacher_id"/>
                <field name="course_name"/>
                <field name="activity_ids" widget="list_activity" />
                <field name="status" decoration-success="status == 'done'" decoration-info="status == 'draft'" decoration-danger = "status == 'cancle'" decoration-warning="status == 'in_process'" widget="badge"/>
            </tree>
        </field>
    </record>
    <record id="action_course_detail" model="ir.actions.act_window">
        <field name="name">Course</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">course.detail</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">No Course Found
                ...</p>
        </field>
    </record>

    <record id="cours_view_form" model="ir.ui.view">
        <field name="name">course.detail.form</field>
        <field name="model">course.detail</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="status" widget="statusbar" nolabel="1" options="{'clickable':1}" status_visible="draft,in_proess,done"/>
                </header>
                <sheet>


                    <div class="oe_title">
                        <h1>
                            <field name="priority" widget="priority" class="mr-3" />
                        </h1>
                    </div>
                    <group>
                        <field name="teacher_id"/>
                        <field name="course_upload_date"/>
                        <field name="first_name"/>
                        <field name="course_name"/>
                        <field name="teacher_count"/>



                        <!-- create Button with Action Type -->
                        <button name="%(school_app.action_course_detail)d" string="Cencle" confirm="Are You Sure To Cencle ?" type="action" class="oe_highlight"/>

                        <!-- create  a button with object Type -->
                         <button name="object_button" string="Object Button" class="oe_highlight" type="object"/>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Enter Your Description" />
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids" />
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
</odoo>
